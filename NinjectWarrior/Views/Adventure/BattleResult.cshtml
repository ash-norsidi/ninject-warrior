@model NinjectWarrior.ViewModels.BattleResultViewModel

@{
    ViewData["Title"] = "Battle Result";
}

<h2>Battle Result</h2>

<div>
    <h3>@Model.ResultMessage</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Player Roll
        </dt>
        <dd class="col-sm-10">
            @Model.PlayerRoll
        </dd>
        <dt class="col-sm-2">
            Enemy Roll
        </dt>
        <dd class="col-sm-10">
            @Model.EnemyRoll
        </dd>
        <dt class="col-sm-2">
            Damage Dealt
        </dt>
        <dd class="col-sm-10">
            @Model.DamageDealt
        </dd>
    </dl>
</div>

<div>
    <h4>Player: @Model.Player.Name</h4>
    <p>Health: @Model.Player.Health</p>
</div>

<div>
    <h4>Enemy: @Model.Enemy.Name</h4>
    <p>Health: @Model.Enemy.Health</p>
</div>

<a asp-action="Index">Return to Adventure</a>
